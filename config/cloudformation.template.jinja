  "Resources": {
    "StackatoVPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "10.0.0.0/16",
        "InstanceTenancy": "default",
        "EnableDnsSupport": "true",
        "EnableDnsHostnames": "true",
        "Tags": [
          {
            "Key": "Name",
            "Value": "stackato-vpc"
          }
        ]
      }
    },
    "PublicSubnetAZ1": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "CidrBlock": "10.0.1.0/24",
        "AvailabilityZone":   { "Fn::FindInMap" : [ "AvailabilityZones", { "Ref" : "Region" }, "Zone1" ] },
        "VpcId": {
          "Ref": "StackatoVPC"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "public-az-1"
          }
        ]
      }
    },
{% if multi_az %}
    "PublicSubnetAZ2": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "CidrBlock": "10.0.2.0/24",
        "AvailabilityZone":   { "Fn::FindInMap" : [ "AvailabilityZones", { "Ref" : "Region" }, "Zone2" ] },
        "VpcId": {
          "Ref": "StackatoVPC"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "public-az-2"
          }
        ]
      }
    },
{% endif %}
    "PrivateSubnetAZ1": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "CidrBlock": "10.0.3.0/24",
        "AvailabilityZone":   { "Fn::FindInMap" : [ "AvailabilityZones", { "Ref" : "Region" }, "Zone1" ] },
        "VpcId": {
          "Ref": "StackatoVPC"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "private-az-1"
          }
        ]
      }
    },
{% if multi_az %}
    "PrivateSubnetAZ2": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "CidrBlock": "10.0.4.0/24",
        "AvailabilityZone":   { "Fn::FindInMap" : [ "AvailabilityZones", { "Ref" : "Region" }, "Zone2" ] },
        "VpcId": {
          "Ref": "StackatoVPC"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "private-az-2"
          }
        ]
      }
    },
{% endif %}
    "InternetGateway": {
      "Type": "AWS::EC2::InternetGateway",
      "Properties": {
        "Tags": [
          {
            "Key": "Name",
            "Value": "stackato-igw"
          }
        ]
      }
    },
    "StackatoDHCP": {
      "Type": "AWS::EC2::DHCPOptions",
      "Properties": {
        "DomainName": "eu-west-1.compute.internal",
        "DomainNameServers": [
          "AmazonProvidedDNS"
        ]
      }
    },
    "StackatoNetworkACL": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": {
        "VpcId": {
          "Ref": "StackatoVPC"
        }
      }
    },
    "StackatoPublicRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "StackatoVPC"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "public-az-1-route-table"
          }
        ]
      }
    },
    "StackatoPrivateRouteTableAZ1": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "StackatoVPC"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "private-az-1-route-table"
          }
        ]
      }
    },
{% if multi_az %}
    "StackatoPrivateRouteTableAZ2": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "StackatoVPC"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "private-az-2-route-table"
          }
        ]
      }
    },
{% endif %}
    "BastionHostAZ1ip": {
      "Type": "AWS::EC2::EIP",
      "DependsOn": [
        "Gateway1"
      ],
      "Properties": {
        "Domain": "vpc",
        "InstanceId": {
          "Ref": "BastionHostAZ1"
        }
      }
    },
    "NATHostAZ1ip": {
      "Type": "AWS::EC2::EIP",
      "DependsOn": [
        "Gateway1"
      ],
      "Properties": {
        "Domain": "vpc",
        "InstanceId": {
          "Ref": "NATHostAZ1"
        }
      }
